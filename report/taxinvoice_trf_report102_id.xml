                    <font style="font-size: 14px;">
                      <br/>
                      <span>1</span>
                      <!--<span t-esc="'{0:,.2f}'.format(float(l.quantity))"/>/-->
                      <!--<span t-esc="l.uom_id.name"/>-->
                    </font>
                  </td>
                  <td style="text-align: right;">
                    <font style="font-size: 14px;">
